# Utiliza una imagen base de Python 3.12
FROM python:3.12 as requirements-stage

# Establece el directorio de trabajo en el contenedor
WORKDIR /tmp

# Instala Poetry
RUN pip install poetry

# Copia los archivos de configuraci贸n de Poetry a la carpeta temporal
COPY ./pyproject.toml ./poetry.lock* /tmp/

# Exporta las dependencias a un archivo requirements.txt sin hashes
RUN poetry export -f requirements.txt --output requirements.txt --without-hashes

# Cambia a una imagen base de Python 3.12 para la etapa de construcci贸n
FROM python:3.12

# Establece el directorio de trabajo en el contenedor
WORKDIR /code

# Copia el archivo de dependencias requirements.txt de la etapa anterior
COPY --from=requirements-stage /tmp/requirements.txt /code/requirements.txt

# Instala las dependencias especificadas en requirements.txt
RUN pip install --no-cache-dir --upgrade -r /code/requirements.txt

# Copia tu aplicaci贸n al directorio /code/app en la imagen
COPY ./app /code/app

# Define el comando para ejecutar la aplicaci贸n
CMD ["uvicorn", "app.main:app", "--proxy-headers", "--host", "0.0.0.0", "--port", "80"]
